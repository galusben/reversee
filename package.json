{
  "name": "Reversee",
  "version": "0.0.3",
  "main": "src/main.js",
  "productName": "Reversee",
  "scripts": {
    "start": "electron-forge start",
    "test:e2e": "./node_modules/mocha/bin/mocha tests/ --timeout 5000 -R spec",
    "build": "rimraf Reversee-* && electron-packager . --platform=darwin,win32,linux --arch=x64 --icon=assets/Reversee --ignore=\"tests|.idea|.*iml|Dockerfile|bitbucket-pipelines.yml\"",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "electron-prebuilt-compile": "1.7.9",
    "mocha": "^3.0.2",
    "rimraf": "^2.5.4",
    "spectron": "^3.6.0",
    "uglify-es": "^3.0.26"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "bootstrap-select": "^1.12.2",
    "codemirror": "^5.25.2",
    "electron-compile": "^6.4.2",
    "electron-squirrel-startup": "^1.0.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.1.0",
    "lodash": "^4.17.4",
    "request-to-curl": "^0.1.1",
    "split.js": "^1.3.4"
  },
  "config": {
    "forge": {
      "s3": {
        "accessKeyId": "AKIAJV7PAOJRP3DOEGCQ",
        "bucket": "reverseeapp",
        "public": true
      },
      "make_targets": {
        "win32": [
          "zip",
          "squirrel"
        ],
        "darwin": [
          "zip",
          "dmg"
        ],
        "linux": [
          "zip",
          "deb"
        ]
      },
      "electronPackagerConfig": {
        "dir": "src",
        "ignore": "tests|.idea|.*iml|docker|build|Dockerfile|bitbucket-pipelines.yml|afterCopy.js",
        "platform": [
          "linux",
          "win32",
          "darwin"
        ],
        "packageManager": "yarn",
        "icon": "src/assets/Reversee",
        "afterCopy": [
          "./afterCopy.js"
        ]
      },
      "electronWinstallerConfig": {
        "name": "Reversee",
        "title": "Reversee",
        "authors": "Gal Ben Ami",
        "description": "Reversee - reverse proxy web debugger"
      },
      "electronInstallerDebian": {
        "description": "Reversee - reverse proxy web debugger",
        "productDescription": "Reversee - reverse proxy web debugger"
      }
    }
  }
}
